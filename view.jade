template(name='gudang'): .container
	h5 Daftar Barang Gudang
	.row
		.col.m8
			.input-field: input#search(value= search placeholder='Nama Obat / Batch')
		.col.m4
			.right.btn#showForm Tambah
	if showForm
		+quickForm(
			collection= coll.gudang
			schema= schema
			id = 'formGudang'
			type = 'insert'
		)
	unless currentPar 'idbarang'
		table.bordered
			thead
				tr
					th ID Barang
					th Jenis Barang
					th Nama Barang
					th Harga Barang
			tbody
				each gudangs
					tr#row
						td= idbarang
						td= jenis
						td= nama
						td= harga

	if currentPar 'idbarang'
		h5 Rincian Barang
		with gudangs
			table
				tr
					th ID Barang
					td= idbarang
				tr
					th Nama
					td= nama
				tr
					th Harga
					td= harga
			table
				thead
					tr
						th ID Batch
						th Masuk
						th Kadaluarsa
						th Beli
						th Jual
						th Di Gudang
						th Di Apotik
						th Suplier
				tbody
					each batch
						tr#transfer
							td= idbatch
							td= hari(masuk)
							td= hari(kadaluarsa)
							td= beli
							td= jual
							td= digudang
							td= diapotik
							td= suplier
